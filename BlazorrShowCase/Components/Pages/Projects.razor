@page "/projects"
@inject BlazorrShowCase.Components.ViewModels.ProjectsViewModel Vm

<h1>Projects</h1>

<div class="grid">
    @foreach (var project in Vm.Projects)
    {
        <div class="card">
            <img src="@project.ImageUrl" />
            <h3>@project.Title</h3>
            <p>@project.Description</p>
        </div>
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await Vm.LoadAsync();
    }
}